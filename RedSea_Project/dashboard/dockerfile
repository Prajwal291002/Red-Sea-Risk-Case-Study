FROM python:3.10-slim-bookworm

# 1. Install System Dependencies
# We need curl and gnupg2 to download the Microsoft key
# We need unixodbc-dev to compile the Python ODBC driver
RUN apt-get update && \
    apt-get install -y curl gnupg2 build-essential unixodbc-dev && \
    apt-get clean

# 2. Install SQL Server ODBC Driver 18 (Debian 12/Bookworm specific)
# This is the critical part that allows Linux to talk to MSSQL
RUN curl -fsSL https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor -o /usr/share/keyrings/microsoft-prod.gpg && \
    echo "deb [arch=amd64,arm64,armhf signed-by=/usr/share/keyrings/microsoft-prod.gpg] https://packages.microsoft.com/debian/12/prod bookworm main" > /etc/apt/sources.list.d/mssql-release.list && \
    apt-get update && \
    ACCEPT_EULA=Y apt-get install -y msodbcsql18

# 3. Install Python Libraries
# These are the libraries your dashboard_app.py needs
RUN pip install --no-cache-dir streamlit pandas pyodbc plotly

# 4. Setup Working Directory
WORKDIR /app

# 5. Copy Application Code
# This copies everything from your local 'dashboard' folder into the container
COPY . .

# 6. Expose the Streamlit Port
EXPOSE 8501

# 7. Run the Application
# The flags ensure it's accessible from outside the container
CMD ["streamlit", "run", "dashboard_app.py", "--server.port=8501", "--server.address=0.0.0.0"]